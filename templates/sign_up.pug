extends base.pug

block content
    #root
      #authbar
        ul.auth
          li
            a.authbar__auth-button(href='sign_in.html') Sign In
          li
            a.authbar__auth-button(href='sign_up.html') Sign Up
      #logo
        h1
          a(href='index.html') Our game
      #main-block
        .main-block__form
          form
            input.main-block__form-field(type='text', placeholder='Login')
            input.main-block__form-field(type='email', placeholder='E-Mail')
            input.main-block__form-field(type='password', placeholder='Password')
            input.main-block__form-field(type='password', placeholder='Confirm password')
            input.main-block__form-button(type='submit', value='Sign Up')
            .main-block__form-links
              p
                a(href='#') Already registered?
              p
                a(href='#') Forgot your password?

extends base.pug

mixin leader(record)
  .main-block__table-row
    .main-block__table-cell record.place
    .main-block__table-cell record.userName
    .main-block__table-cell record.score

block content  
    #root
      #authbar
        ul.auth
          li
            a.authbar__auth-button(href='sign_in.html') Sign In
          li
            a.authbar__auth-button(href='sign_up.html') Sign Up
      #logo
        h1
          a(href='index.html') Our game
      #main-block
        .main-block__form
          .main-block__table
            .main-block__table-body
              .main-block__table-row
                .main-block__table-cell.main-block__table-head Place
                .main-block__table-cell.main-block__table-head Gamer
                .main-block__table-cell.main-block__table-head Score
            for record in locals.records
              +leader(member)

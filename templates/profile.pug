extends base.pug

block content
    #root
      #authbar
        ul.auth
          li
            a.authbar__auth-button(href='sign_in.html') Sign In
          li
            a.authbar__auth-button(href='sign_up.html') Sign Up
      #logo
        h1
          a(href='index.html') Our game
      #main-block
        .main-block__form
          .main-block__profile
            .main-block__profile-user
              img.main-block__profile-user-avatar(src='../img/avatar-blank.png', alt='avatar')
              span.main-block__profile-user-name #USERNAME
            .main-block__profile-info
              ul
                li
                  p
                    strong E-Mail:
                    |  example@mail.ru
                li
                  p
                    strong Wins:
                    |  123
                li
                  p
                    strong Loses:
                    |  99